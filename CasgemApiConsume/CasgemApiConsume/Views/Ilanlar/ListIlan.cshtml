@model List<CasgemApiConsume.Dtos.IlanlarDtos.ResultIlanlarDto>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="w3l-about-breadcrumb">
    <div class="breadcrumb-bg breadcrumb-bg-about pt-5">
        <div class="container pt-lg-5 py-3">
        </div>
    </div>
</section>
<section class="w3l-breadcrumb">
    <div class="container">
        <ul class="breadcrumbs-custom-path">
            <li><a href="/Home/Index/">Anasayfa</a></li>
            <li class="active"><span class="fa fa-angle-right mx-2" aria-hidden="true"></span> İlanlar</li>
        </ul>
    </div>
</section>
<section class="locations-1" id="locations">
    <div class="locations py-5">
        <div class="container py-lg-5 py-md-4 py-2">
            <div class="row">

                @foreach (var i in Model)
                {
                    <div class="col-lg-4 col-md-6 listing-img mb-4" >
                        <a href="#url">
                            <div class="box16">
                                <div class="rentext-listing-category"><span>Budotekno</span></div>
                                <img class="img-fluid" style="height:250px" src="@i.ImageUrl" alt="">
                                <div class="box-content">
                                    <h3 class="title">@i.Ucret ₺</h3>
                                </div>
                            </div>
                        </a>
                        <div class="listing-details blog-details align-self">
                            <h4 class="user_title agent">
                                <a href="#url">@i.IlanAdi</a>
                            </h4>
                            <p class="user_position">@i.Sehir</p>
                            <ul class="mt-3 estate-info">
                                <li><span class="fa fa-bed"></span> @i.BalkonSayısı Balkon</li>
                                <li><span class="fa fa-shower"></span> @i.BanyoSayısı Banyo</li>
                                <li><span class="fa fa-share-square-o"></span> @i.BulunduguKat. Kat</li>
                            </ul>
                           

                            <hr>
                            <a asp-action="ListIlanById" asp-route-id="@i._id" class="btn btn-warning">Detay</a>
                        </div>
                        
                       

                    </div>

                }


              


            </div>

           
        </div>
    </div>
</section>